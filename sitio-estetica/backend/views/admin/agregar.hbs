<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva Promo</h4>
            <form action="/admin/promos/agregar" method="post">
        
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Descripcion de la promo" name="promo"></textarea>
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Precio" name="precio"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}

        </div>

    </div>

</div>

