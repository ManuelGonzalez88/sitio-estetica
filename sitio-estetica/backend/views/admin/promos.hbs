<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class='text-end'>Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesi√≥n <i
                    class="fas fa-sign-out-alt"></i></a> </p>

    </div>

    <div class="row">
        <div class="col-7">
            <h3>Listado de Promos</h3>
        </div>

        <div class="col-5 text-end">
            <a class="btn btn-outline-success" href="/admin/promos/agregar"><i class="fa-solid fa-square-plus"
                    style="font-size: 15px; margin-right:8px"></i> Nuevo</a>
        </div>
    </div>


    <table class="table table-striped table-hover" style="margin-top: 15px;">
        <thead class="table-dark ">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Imagen</th>
                <th scope="col">Descripcion de la promo</th>
                <th scope="col">Precio</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each promos}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{{imagen}}}</td>
                <td>{{promo}}</td>
                <td>{{precio}}</td>
                <td class="text-center">
                    {{!-- <a class="btn btn-outline-dark btn-sm margin-5" href="#"><i class="fa-solid fa-image"></i></a> --}}

                    <a class="btn btn-outline-dark btn-sm margin-5" href="/admin/promos/modificar/{{id}}"><i class="fa-solid fa-pen-clip"></i></a>

                    <a class="btn btn-outline-dark btn-sm margin-5" href="/admin/promos/eliminar/{{id}}"><i
                            class="fa-solid fa-trash-can"></i></a>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>

</div>